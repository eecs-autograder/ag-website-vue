{
    "compilerOptions": {
        "target": "es5",
        "downlevelIteration": true,
        "module": "esnext",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/tests/*": [
                "tests/*"
            ]
        },
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
