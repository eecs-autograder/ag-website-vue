{
    "compilerOptions": {
        "target": "ES2015",
        "downlevelIteration": true,
        "module": "esnext",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./types",
            "node_modules/@types"
        ],
        "paths": {
            // IMPORTANT: Update vite.config.js if these paths change.
            "@/*": [
                "src/*"
            ],
            "@/tests/*": [
                "tests/*"
            ],
            "highlight.js": [
                "src/redefined_types/highlightjs.d.ts"
            ]
        },
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./types/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "cypress/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "e2e_test_stack"
    ]
}
